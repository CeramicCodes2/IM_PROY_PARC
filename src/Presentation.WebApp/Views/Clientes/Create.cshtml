    <small id="Telefono" class="form-text">como 551033293</small>
  </div>
  <div class="form-group">
    <label for="Correo">Correo:</label>
    <input asp-for="Correo" type="text" required class="form-control" id="Direccion" aria-describedby="Correo" placeholder="coloque su correo">
    <small id="Telefono" class="form-text">direccion como ejido edandial</small>
  </div>
  <button type="submit" class="btn btn-primary">Hecho</button>
