@{ ViewData["Title"] = "Clientes"; }

@model List<Cliente>
    <link href="//cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.css" rel="stylesheet" type="text/css">

<h1 class="h1 titleGothic"> Clientes:</h1>
<div class='container'>
<table id='clientsCRUD' class="table table-striped table-dark">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Nombre</th>
        <th scope="col">acciones</th>
    </tr>
    </thead>
        <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <th>@c.Id</th>
            <td>@c.Nombre</td>
            <td>
                <a asp-action="Details" asp-route-id="@c.Id" role="button" class="btn btn-info">Detalles</a>
                <a asp-action="Edit" asp-route-id="@c.Id" role="button" class="btn btn-success">Editar</a>
                <a asp-action="Delete" asp-route-id="@c.Id" role='button' class=' btn btn-danger'>Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
<div class="container justify-items-center">
<p>
  <a class="btn btn-primary" asp-action="Create" role="button">
    crear nuevo cliente
  </a>
</p>
</div>
@section Scripts{
    <script>
            let config =  masterConfigs['config_general_data_table']
            changeConfigsDataTable(config,'Clientes')
            let table = $('#clientsCRUD').DataTable(config);
            table.buttons().container().appendTo('#btn-toolbar .col-md-6:eq(0)');
    </script>

}