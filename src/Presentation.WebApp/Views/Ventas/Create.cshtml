@model Venta
<h1 class="h1">
    Insertar valores:
</h1>
<div class='container'>
<form asp-action="Create" enctype="multipart/form-data">
<label>Cliente ID</label>
<select asp-for="ClienteId" required class="form-select" aria-label="SELECT CLIENTE ID">
@foreach (var v in (List<Cliente>)ViewBag.Cliente){
<option value="@v.Id">@v.Nombre</option>
}
</select>
<label>Producto ID</label>
<select asp-for="ProductoId" required class="form-select" aria-label="SELECT PRODUCTO ID">
@foreach (var v in (List<Producto>)ViewBag.Producto){
<option value="@v.Id">@v.Descripcion</option>
}
</select>
    <div class="form-group">
    <label for="Fecha">Fecha:</label>
    <input asp-for="Fecha" type="date" required class="form-control" id="Id" aria-describedby="Fecha" placeholder="coloque su Fecha">
    <small id="dFecha" class="form-text">Fecha como 50 en existencia</small>
  </div>
  <button type="submit" class="btn btn-primary">Hecho</button>
  <a role='button' class="btn btn-warning" asp-action="Index">Cancelar</a>
</form>
</div>

