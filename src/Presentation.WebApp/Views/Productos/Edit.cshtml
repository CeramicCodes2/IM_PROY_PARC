@{
    ViewData["Title"] = "Producto > Editar";
}
@model Producto
<script>

  function editButtonOn(element){
    var em = document.getElementById(element)
    em.removeAttribute("readonly");suario
    em.setAttribute('');// agrega el atributo para que no coloquen valores vacios
    }
</script>
<!--
    ()=>{
        document.getElementById("#Descripcion").setAttribute("readonly",null);
        }'-->
<div class='container'>
<h1 class="h1" >Detalles sobre el producto: </br> @Model.Descripcion</h1>
<form asp-action="Edit" enctype="multipart/form-data">
  <div class="form-group">
    <label for="Id">ID:</label>
    <input readonly asp-for="Id" type="text" class="form-control"  id="Id" aria-describedby="Id" placeholder="@Model.Id">
    <small id="usrId" class="form-text">id del producto</small>
  </div>
  <div class="form-group">
    <label for="Descripcion">Descripcion:</label>
    <input readonly asp-for="Descripcion" type="text" class="form-control"  id="Descripcion" aria-describedby="Descripcion" placeholder="@Model.Descripcion">
    <small id="nomDescripcion" class="form-text">Descripcion como caja negra</small>
    <button class="btn btn-warning" type='button' onclick='editButtonOn("Descripcion")'>Editar</button>
  </div>
  <div class="form-group">
    <label for="Precio">Precio:</label>
    <input readonly asp-for="Precio" type="text"  class="form-control" id="Precio" aria-describedby="Precio" placeholder="@Model.Precio">
    <small id="dPrecio" class="form-text">Precio como 20</small>
    <button class="btn btn-warning" type='button' onclick='editButtonOn("Precio")'>Editar</button>

  </div>
  <div class="form-group">
    <label for="Cantidad">Cantidad:</label>
    <input readonly asp-for="Cantidad" type="text"  class="form-control" id="Cantidad" aria-describedby="Cantidad" placeholder="@Model.Cantidad">
    <small id="dCantidad" class="form-text">como 20</small>
    <button class="btn btn-warning" type='button' onclick='editButtonOn("Cantidad")'>Editar</button>
  </div>
  <button type="submit" class="btn btn-primary" > Hecho </button>
  <button  asp-action="Index" class="btn btn-warning">Cancelar</button>
  <!--<button class="btn btn-warning" asp-action="Index">Cancelar</button>
    -->
</form>
</div>
