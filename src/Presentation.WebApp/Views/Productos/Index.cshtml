@{
    ViewData["Title"] = "Productos";
}
<div class="container">
    <h1 class="h1 titleGothic">Informacion sobre Productos:</h1>
<table class="table table-striped table-dark">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Precio</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Acciones</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <th>@p.Id</th>
            <td>@p.Descripcion</td>
            <td>@p.Precio</td>
            <td>@p.Cantidad</td>

            <td>
                <a asp-action="Details" asp-route-id="@p.Id" role="button" class="btn btn-info">Detalles</a>
                <a asp-action="Edit" asp-route-id="@p.Id" role="button" class="btn btn-success">Editar</a>
                <a asp-action="Delete" asp-route-id="@p.Id" role='button' class=' btn btn-danger'>Eliminar</a>
            </td>
        </tr>
    }
</table>

<p>
  <a class="btn btn-primary" asp-action="Create" role="button">
    crear nuevo
  </a>
</p>
</div>
